@model SCRH.Models.Usuario

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Atualizar Usuário</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Atualizar", "Usuario", FormMethod.Post, new { }))
            {
                @Html.HiddenFor(x => x.UsuarioId)
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">Nome</label>
                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">Documento</label>
                        @Html.TextBoxFor(x => x.Documento, new { @class = "form-control" })
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Login</label>
                            @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating">Tipo Usuário</label>
                            @Html.EnumDropDownListFor(x => x.TipoUsuario, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-info">Atualizar</button>
                </div>
            }
        </div>
    </div>
</div>